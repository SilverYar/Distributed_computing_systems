<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.copyritersShop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.copyritersShop.App"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.example.copyritersShop.ui.activity.HostActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.copyritersShop.ui.activity.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.copyritersShop.ui.activity.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.copyritersShop.ui.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.copyritersShop.ui.activity.ClientMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.copyritersShop.ui.activity.ClientOrdersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.copyritersShop.ui.activity.OperatorMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.copyritersShop.ui.activity.CopyriterMainActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.example.copyritersShop.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>